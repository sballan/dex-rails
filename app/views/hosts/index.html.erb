<p id="notice"><%= notice %></p>

<h1 class="title">Hosts</h1>

<%= link_to 'New Host', new_host_path %>

<table class="table">
  <thead>
    <tr>
      <th>Host url string</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hosts.each do |host| %>
      <tr>
        <td><%= host.host_url_string %></td>
        <td><%= link_to 'Show', host %></td>
        <td><%= link_to 'Edit', edit_host_path(host) %></td>
        <td><%= link_to 'Destroy', host, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>