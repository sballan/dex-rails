<p id="notice"><%= notice %></p>

<p>
  <strong>Value:</strong>
  <%= @query.value %>
</p>

<table>
  <thead>
    <tr>
      <th>Matched String</th>
      <th>Relevance</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hits&.each do |hit| %>
      <tr>
        <td><%= hit[:word] %></td>
        <td><%= "#{((hit[:count].to_f / hit[:total_words_on_page]) * 100).to_s[0..3]}%" %></td>
        <td> <a href="<%= hit[:url_string]%>"><%= hit[:url_string]%></a></td>
      </tr>
    <% end %>
  </tbody>
</table>



<%= link_to 'Edit', edit_query_path(@query) %> |
<%= link_to 'Back', queries_path %>
